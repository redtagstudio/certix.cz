---
import Header from "components/main/Header.astro";
import Contact from "components/main/Contact.astro";
import Footer from "components/main/Footer.astro";

import "less/base/include.less";

interface Props {
	title: string;
	description?: string;
	subtitle?: string;
	url?: string;
	image?: string;
	withContainer?: boolean;
}

const {
	title = "",
	description = "Vydávání, správa a monitoring uživatelských a serverových certifikátů",
	subtitle = "Certix.cz",
	url = Astro.url.href,
	image = "img/ogcertix.jpg",
	withContainer = true,
} = Astro.props;

const finalTitle = title === "" ? subtitle : `${title} - ${subtitle}`;
---

<!doctype html>
<html lang="cs">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="generator" content={Astro.generator} />

		<!-- general meta -->
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta name="author" content="Certix" />

		<!-- open graph -->
		<meta property="og:title" content={finalTitle} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:type" content="website" />
		<meta property="og:site_name" content="Certix" />
		<meta property="og:url" content={url} />
		<meta
			property="og:image"
			content={Astro.site ? `${Astro.site}${image}` : image}
		/>

		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<meta name="msapplication-TileColor" content="#603cba" />
		<meta name="theme-color" content="#ffffff" />

		<meta name="robots" content="index, follow" />
		<title>{finalTitle}</title>
	</head>
	<body>
		<Header />
		{
			withContainer ? (
				<div class="container">
					<slot />
				</div>
			) : (
				<slot />
			)
		}
		<Contact />
		<Footer />
	</body>
</html>
