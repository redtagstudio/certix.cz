---
import Logo from "../../assets/imgs/logo-text.svg?raw";
import Contact from "./Contact.astro";

import "./Footer.less";
---

<script src="../../scripts/footer/toTop.ts"></script>
<footer>
  <div class="container">
    <Contact />
  </div>
  <div class="content">
    <hr class="divider" />
    <div class="copyright-payment">
      <p class="copyright">©2023 - Všechny práva vyhrazena</p>
      <p class="copyright">CERTIX s.r.o., IČ: 19713134, DIČ: CZ19713134</p>
    </div>
    <div class="footer-logo">
      <Fragment set:html={Logo} />
    </div>
  </div>
  <div
    id="to-top"
    aria-label="Zpět na začátek"
    title="Zpět na začátek"
    tabindex="0"
    role="button"
  >
    <span class="chevron"></span>
  </div>
</footer>
